<?xml version="1.0"?>
<project name="the project" default="compile" basedir=".">

    <!-- Properties -->
    <property name="src.dir" location="src" />
    <property name="bin.dir" location="bin" />
    <property name="lib.dir" location="lib" />

    <!-- Classpath -->
    <path id="classpath">
        <fileset dir="${.github/workflows/build.xml}" includes="**/*.jar" />
    </path>

    <!-- Initialization target -->
    <target name="init">
        <tstamp />
        <mkdir dir="${bin.dir}" />
    </target>

    <!-- Clean target -->
    <target name="clean" description="remove intermediate files">
        <delete dir="${bin.dir}" />
    </target>

    <!-- Compile target -->
    <target name="compile" depends="init" description="compile the Java source code to class files">
        <javac srcdir="${src.dir}" destdir="${bin.dir}" classpathref="classpath" />
    </target>

</project>
